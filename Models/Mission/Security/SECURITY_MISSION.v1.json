{
  "title": "SECURITY_TASK",
  "type": "object",
  "description": "",
  "properties": {
    "securityMission": {
      "type": "object",
      "required": [
        "routePoints"
      ],
      "properties": {
        "velocity": {
          "type": "number",
          "minimum": 0,
          "maximum": 15,
          "example": 5
        },
        "heading": {
          "type": "number",
          "minimum": 0,
          "maximum": 359.99,
          "example": 0
        },
        "headingType": {
          "type": "string",
          "enum": [
            "Auto",
            "Fixed",
            "Manual",
            "Custom",
            "POI",
            "GimbalYawFollow"
          ],
          "example": "Auto"
        },
        "relativeHeadingType": {
          "type": "string",
          "enum": [
            "North",
            "Body"
          ],
          "example": "Body"
        },
        "relativeAlt": {
          "type": "number",
          "example": 50
        },
        "POI": {
          "type": "object",
          "properties": {
            "geoPoint": {
              "$ref": "../../geo/GEOPOINT_3D_SHORT.v1.json"
            }
          }
        },
        "actions": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "./AUTONOMOUS_ACTION.v1.json"
          }
        },
        "routePoints": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "./AUTONOMOUS_POINT.v1.json"
          }
        }
      }
    },
    "name": {
      "type": "string",
      "description": ""
    }
  },
  "required": [
    "securityMission",
    "name"
  ]
}
